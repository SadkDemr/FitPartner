@model LifeCoachWebApp.Models.Classes.Instructor
@{
    ViewBag.Title = "InstructorBring";
    Layout = "~/Views/Shared/_InstructorAdminPanel.cshtml";
}

<h2>InstructorBring</h2>

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">


        <title>update my profile - Bootdey.com</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <style type="text/css">
            body {
                margin-top: 20px;
                color: #9b9ca1;
            }

            .bg-secondary-soft {
                background-color: rgba(208, 212, 217, 0.1) !important;
            }

            .rounded {
                border-radius: 5px !important;
            }

            .py-5 {
                padding-top: 3rem !important;
                padding-bottom: 3rem !important;
            }

            .px-4 {
                padding-right: 1.5rem !important;
                padding-left: 1.5rem !important;
            }

            .file-upload .square {
                height: 250px;
                width: 250px;
                margin: auto;
                vertical-align: middle;
                border: 1px solid #e5dfe4;
                background-color: #fff;
                border-radius: 5px;
            }

            .text-secondary {
                --bs-text-opacity: 1;
                color: rgba(208, 212, 217, 0.5) !important;
            }

            .btn-success-soft {
                color: #28a745;
                background-color: rgba(40, 167, 69, 0.1);
            }

            .btn-danger-soft {
                color: #dc3545;
                background-color: rgba(220, 53, 69, 0.1);
            }

            .form-control {
                display: block;
                width: 100%;
                padding: 0.5rem 1rem;
                font-size: 0.9375rem;
                font-weight: 400;
                line-height: 1.6;
                color: #29292e;
                background-color: #fff;
                background-clip: padding-box;
                border: 1px solid #e5dfe4;
                -webkit-appearance: none;
                -moz-appearance: none;
                appearance: none;
                border-radius: 5px;
                -webkit-transition: border-color 0.15s ease-in-out, -webkit-box-shadow 0.15s ease-in-out;
                transition: border-color 0.15s ease-in-out, -webkit-box-shadow 0.15s ease-in-out;
                transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
                transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out, -webkit-box-shadow 0.15s ease-in-out;
            }
        </style>
    </head>
    <body>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />
        <div class="container">
            <div class="row">
                <div class="col-12">

                    <div class="my-5">
                        <h3>My Profile</h3>
                        <hr>
                    </div>

                    @using (Html.BeginForm("InstructorUpdate", "Instructor", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="row mb-5 gx-5">

                            <div class="col-xxl-8 mb-5 mb-xxl-0">
                                <div class="bg-secondary-soft px-4 py-5 rounded">
                                    <div class="row g-3">
                                        <h4 class="mb-4 mt-0">Contact detail</h4>
                                        @Html.HiddenFor(x => x.InstructorID)
                                        <div class="col-md-6">
                                            <label class="form-label">Adı *</label>

                                            @Html.TextBoxFor(x => x.InstructorName, new { @class = "form-control" })
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label">Soyadı *</label>

                                            @Html.TextBoxFor(x => x.InstructorLastName, new { @class = "form-control" })
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label">Telefon Numarası *</label>
                                            @Html.TextBoxFor(x => x.InstructorPhoneNumber, new { @class = "form-control", @onkeypress = "return event.charCode >= 48 && event.charCode <= 57" })
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label">Alanı*</label>
                                            @Html.DropDownListFor(x => x.WorkingAreas.WorkingAreaID, (List<SelectListItem>)ViewBag.val, new { @class = "form-control" })
                                        </div>

                                        <div class="col-md-6">
                                            <label for="inputEmail4" class="form-label">Mail *</label>
                                            <input type="email" class="form-control" name="InstructorMail" value="@Model.InstructorMail">

                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label">Deneyim Yılı</label>
                                            <input type="text" class="form-control" name="InstructorExperience" placeholder="" value="@Model.InstructorExperience">

                                        </div>

                                        <div class="col-md-6">
                                            <label for="inputEmail4" class="form-label">Adres</label>
                                            @Html.TextBoxFor(x => x.InstructorAddress, new { @class = "form-control" })
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label">Şehir</label>
                                            @Html.TextBoxFor(x => x.InstructorCity, new { @class = "form-control" })
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label">Doğum Tarihi</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" placeholder="gg/aa/yyyy" name="InstructorDateOfBirth" value="@Model.InstructorDateOfBirth" aria-label="Doğum Tarihi" aria-describedby="basic-addon2">
                                                <span class="input-group-text" id="basic-addon2"><i class="fas fa-calendar-alt"></i></span>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <label for="inputEmail4" class="form-label">Ön Yazı</label>
                                            <input type="text" class="form-control" name="InstructorCoverLetter" id="InstructorCoverLetter" value="@Model.InstructorCoverLetter">
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label">Hakkımda</label>
                                            @Html.TextAreaFor(x => x.InstructorAbout, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xxl-4">
                                <div class="bg-secondary-soft px-4 py-5 rounded">
                                    <div class="row g-3">
                                        <h4 class="mb-4 mt-0">Upload your profile photo</h4>
                                        <div class="text-center">

                                            @if (!string.IsNullOrEmpty(Model.InstructorImage))
                                            {
                                                <div class="square position-relative display-2 mb-3">
                                                    <img src="@Model.InstructorImage" alt="Admin" class="rounded-circle" width="150">
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="square position-relative display-2 mb-3">
                                                    <i class="fas fa-fw fa-user position-absolute top-50 start-50 translate-middle text-secondary"></i>
                                                </div>
                                            }

                                            <input hidden type="text" id="InstructorImage" name="InstructorImage" value="@Model.InstructorImage" />

                                            <input type="file" id="customFile" name="InstructorImage" hidden="">
                                            <label class="btn btn-success-soft btn-block" for="customFile">Upload</label>
                                            <button type="button" class="btn btn-danger-soft">Remove</button>

                                            <p class="text-muted mt-3 mb-0"><span class="me-1">Note:</span>Minimum size 300px x 300px</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row mb-5 gx-5">

                            <div class="col-xxl-6">
                                <div class="bg-secondary-soft px-4 py-5 rounded">
                                    <div class="row g-3">
                                        <h4 class="my-4">Change Password</h4>

                                        <div class="col-md-6">
                                            <label for="exampleInputPassword1" class="form-label">Old password *</label>
                                            @Html.TextBoxFor(x => x.InstructorPass, new { @class = "form-control" })
                                            @Html.PasswordFor(x => x.InstructorPass, new { @class = "form-control" })
                                        </div>

                                        <div class="col-md-6">
                                            <label for="exampleInputPassword2" class="form-label">New password *</label>
                                            <input type="password" class="form-control" id="exampleInputPassword2">
                                        </div>

                                        <div class="col-md-12">
                                            <label for="exampleInputPassword3" class="form-label">Confirm Password *</label>
                                            <input type="password" class="form-control" id="exampleInputPassword3">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Update Profile</button>
                        </div>
                        <br />
                    }
                </div>
            </div>
        </div>

        <script>
    $(document).ready(function() {
        // Check if there is a selected image
        if ($("#InstructorImage").val() != "") {
            $("#profile-img").show();
        }

        // Show the selected image on file selection
        $("#customFile").on("change", function() {
            var file = this.files[0];
            var reader = new FileReader();

            reader.onload = function(e) {
                $("#profile-img").attr("src", e.target.result);
                $("#profile-img").show();
            }

            reader.readAsDataURL(file);
        });

        // Remove the selected image and show default image
        $("#remove-img").on("click", function() {
            $("#InstructorImage").val("");
            $("#profile-img").attr("src", "@Model.InstructorImage");
            $("#profile-img").hide();
        });
    });
        </script>
        <!-- jQuery -->
        <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- AdminLTE App -->
        <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
        <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <script type="text/javascript">

        </script>
    </body>
</html>

