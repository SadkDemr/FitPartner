@model LifeCoachWebApp.Models.Classes.Student
@{
    ViewBag.Title = "StudentProfile";
    Layout = "~/Views/Shared/_StudentAdminPanel.cshtml";
}

<h2>StudentProfile</h2>

@using (Html.BeginForm("StudentProfile", "Student", FormMethod.Post))
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">


        <title>profile with data and skills - Bootdey.com</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
        <style type="text/css">
            body {
                margin-top: 20px;
                color: #1a202c;
                text-align: left;
                background-color: #e2e8f0;
            }

            .main-body {
                padding: 15px;
            }

            .card {
                box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
            }

            .card {
                position: relative;
                display: flex;
                flex-direction: column;
                min-width: 0;
                word-wrap: break-word;
                background-color: #fff;
                background-clip: border-box;
                border: 0 solid rgba(0,0,0,.125);
                border-radius: .25rem;
            }

            .card-body {
                flex: 1 1 auto;
                min-height: 1px;
                padding: 1rem;
            }

            .gutters-sm {
                margin-right: -8px;
                margin-left: -8px;
            }

                .gutters-sm > .col, .gutters-sm > [class*=col-] {
                    padding-right: 8px;
                    padding-left: 8px;
                }

            .mb-3, .my-3 {
                margin-bottom: 1rem !important;
            }

            .bg-gray-300 {
                background-color: #e2e8f0;
            }

            .h-100 {
                height: 100% !important;
            }

            .shadow-none {
                box-shadow: none !important;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="main-body">

                <nav aria-label="breadcrumb" class="main-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item"><a href="javascript:void(0)">User</a></li>
                        <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                    </ol>
                </nav>

                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <div class="mt-3">
                                        <h4>@Model.StudentName @Model.StudentLastName</h4>
                                        <p class="text-secondary mb-1">@Model.StudentDateOfBirth</p>
                                        <p class="text-muted font-size-sm">@Model.StudentAddress</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Adınız</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Model.StudentName
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Soyadınız</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Model.StudentLastName
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Mail</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <a href="" class="__cf_email__" data-cfemail="d4b2bda494bea1bfb9a1bcfab5b8">@Model.StudentMail</a>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Telefon Numarası</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Model.StudentPhoneNumber
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Eğitmeniniz</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Model.Instructors.InstructorName @Model.Instructors.InstructorLastName
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Boyunuz</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Model.StudentLength
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Kilonuz</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Model.StudentWeight

                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Vücut Kitle İndeksiniz</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Model.StudentFatRate
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Doğum Tarihi</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Model.StudentDateOfBirth
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Adres</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Model.StudentAddress
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Şehir</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Model.StudentCity
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-12">
                                        <a class="btn btn-info " href="/Student/StudentBring/@Model.StudentID">Edit</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
        <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
        <script type="text/javascript">

        </script>
    </body>
</html>
}
